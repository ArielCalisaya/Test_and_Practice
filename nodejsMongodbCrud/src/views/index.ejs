<%- include('partials/_header') -%>


<div class="container">
    <div class="row">
        <div class="col-md-5">
            <div class="card" id="card-container">
                <div class="card-body ">

                    <!-- no recive datos de metodo post en ejs -->
                    <form action="/agregar" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="title" placeholder="ingresar titulo">
                        </div>
                        <div class="form-group">

                            <textarea class="form-control" name="description" placeholder="Descripción" cols="80"></textarea>
                        </div>
                        <div class="add-button"></div>
                            <button class="btn btn-success btn-block" type="submit">Añadir</button>
                        </div >
                    </form>
                </div>
            </div>

            <!-- list To do -->
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>N°</th>
                            <th>Titulo</th>
                            <th>Descripción</th>
                            <th>Operación</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                    </tbody>
                </table>
            </div>
        </div>        
    </div>
</div>


<%- include('partials/_footer') -%>
